<%= simple_form_for(@tweeet) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control"> 
      <%= f.input :tweeet, label: "Tell me something new today...", input_html: {class:"textarea"}, wrapper: false, label_html: {class:"label"}, placeholder:"Compose a new secret..." %>
    </div>
  </div>
<%= f.button :submit, "Post a Secret", class: "button" %>
<% end %>
