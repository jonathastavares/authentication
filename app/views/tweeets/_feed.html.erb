<div class="column is-three-quarters">
  <article class="media box">
    <div class="media-content">
      <%= render 'tweeets/form' %>
    </div>
  </article>
  <% @tweeets.each do |tweeet| %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p><%= tweeet.tweeet %></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <% if user_signed_in? %>
                <p> Created by:</p>
                <%= tweeet.user.username %>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>
